        if (obj_levelcontrol.y &gt; y) {
        
            vspeed += 0.0324;
            if (vspeed &gt; 1)
                vspeed = 1;
        }
        else if (obj_levelcontrol.y &lt; y) {
        
            vspeed -= 0.0324;
            if (vspeed &lt; -1)
                vspeed = -1;
        }    
    }
